{
  "name": "sca-demo-nodejs",
  "version": "1.0.0",
  "description": "This is a **Node.js + TypeScript** project using **Express 3.x**, `date-fns 2.0.0`, and `date-fns-tz 2.0.0`.   It provides API endpoints for **time conversions, user local time retrieval, and event scheduling**.",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "debug": "node --inspect -r ts-node/register src/server.ts",
    "build": "tsc",
    "dev": "ts-node src/server.ts",
    "lint:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint:fix": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arvion-ai/sca-demo-nodejs.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/arvion-ai/sca-demo-nodejs/issues"
  },
  "homepage": "https://github.com/arvion-ai/sca-demo-nodejs#readme",
  "dependencies": {
    "date-fns": "2.0.0",
    "date-fns-tz": "2.0.0",
    "express": "3.21.2",
    "prettier": "^3.5.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.5",
    "typescript": "^5.7.3"
  }
}
